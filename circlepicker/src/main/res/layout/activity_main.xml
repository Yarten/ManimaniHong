<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yarten.circlepicker.MainActivity">

    <com.yarten.circlepicker.CirclePickerView
        android:id="@+id/circlePickerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="8dp"
        android:scrollbarSize="15dp"
        android:soundEffectsEnabled="true"
        app:dividerColor="@android:color/holo_purple"
        app:dividerWidth="5dp"
        app:interactive="true"
        app:label='"AAA"'
        app:labelColor="@color/colorAccent"
        app:labelPosition="none"
        app:labelSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:max="100"
        app:min="0"
        app:pointerHaloWidth="12dp"
        app:showDivider="false"
        app:showPointer="true"
        app:showValueText="true"
        app:textSize="15dp"
        app:wheelRadius="50dp"
        app:wheelStrokeWidth="10dp" />

</android.support.constraint.ConstraintLayout>
