<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rangeBarLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.rangebar.MainActivity">

    <com.example.rangebar.RangeBar
        android:id="@+id/rangeBar"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mrb_tickEnd="100"
        app:mrb_tickStart="0" />

    <TextView
        android:id="@+id/minValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        app:layout_constraintLeft_toLeftOf="@id/rangeBar"
        app:layout_constraintTop_toBottomOf="@+id/rangeBar" />

    <TextView
        android:id="@+id/maxValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.00"
        app:layout_constraintRight_toRightOf="@id/rangeBar"
        app:layout_constraintTop_toBottomOf="@id/rangeBar" />

</android.support.constraint.ConstraintLayout>
