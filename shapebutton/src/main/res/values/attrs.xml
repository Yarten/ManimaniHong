<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="shape" >
        <enum name="square" value="0"/>
        <enum name="circle" value="1"/>
        <enum name="triangle" value="2"/>
    </attr>

    <attr name="color" format="color"/>
    <attr name="rotation" format="integer"/>
    <attr name="image" format="reference"/>
    <attr name="text" format="string"/>

    <declare-styleable name="ShapeView">
        <attr name="shape" />
        <attr name="color"/>
    </declare-styleable>

    <declare-styleable name="ShapeButton">
        <attr name="shape"/>
        <attr name="color"/>
        <attr name="rotation"/>
        <attr name="image"/>
        <attr name="text"/>
    </declare-styleable>
</resources>
