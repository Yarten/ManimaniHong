<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_page"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:fontFamily="@font/qitijianti"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户"
        android:fontFamily="@font/zhunyuan"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/register_username_edit"
        app:layout_constraintBottom_toBottomOf="@+id/register_username_edit"
        app:layout_constraintRight_toLeftOf="@+id/register_username_edit"/>

    <EditText
        android:id="@+id/register_username_edit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@null"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:fontFamily="@font/zhunyuan"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/register_password_edit"
        app:layout_constraintRight_toLeftOf="@+id/register_password_edit"/>

    <EditText
        android:id="@+id/register_password_edit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username" />

    <TextView
        android:id="@+id/register_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:fontFamily="@font/zhunyuan"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/register_confirm_edit"
        app:layout_constraintBottom_toBottomOf="@+id/register_confirm_edit"
        app:layout_constraintRight_toLeftOf="@+id/register_confirm_edit"/>

    <EditText
        android:id="@+id/register_confirm_edit"
        android:layout_width="180dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:text="注册"
        android:fontFamily="@font/zhunyuan"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_confirm" />


    <CheckBox
        android:id="@+id/checkBox_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="显示密码"
        android:fontFamily="@font/zhunyuan"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@+id/register_confirm_edit"
        app:layout_constraintTop_toBottomOf="@+id/register_confirm" />

</android.support.constraint.ConstraintLayout>